#:kivy 2.1.0

Root:
    canvas.before:
        Color:
            hsv: (0, 0, 0.72)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 2
        GridLayout: # Main workspace
            rows: 2
            WorkBar:
                cols: 1
                Button:
                    width: 150
                    size_hint_x: None
                    text: "Process"
            FloatLayout:
        GridLayout: # Dataset/Info column
            rows: 2
            size_hint_x: 0.40
            DatasetPanel:
                size_hint_y: 0.40
            InfoPanel:


<WorkBar@GridLayout>:
    canvas.before:
        Color:
            hsv: (0, 0, 0.26)
        Rectangle:
            pos: self.pos
            size: self.size

    height: 40
    spacing: 10
    size_hint_x: 1
    size_hint_y: None

<DatasetPanel>:
    rows: 2
    scrollview: scrollview
    canvas.before:
        Color:
            hsv: (0, 0, 0.72)
        Rectangle:
            pos: self.pos
            size: self.size
    WorkBar:
        cols: 3
        Label:
            text: "Datasets"
        Button:
            width: 15
            size_hint_x: None
            text: "-"
        Button:
            width: 15
            size_hint_x: None
            text: "+"
            on_release: root.show_load()
    ScrollView:
        id: scrollview
        do_scroll_x: False
        do_scroll_y: True
        bar_pos_y: "right"
        scroll_wheel_distance: 40

<DatasetAccordion>:
    size_hint_x: 1
    size_hint_y: None
    orientation: "vertical"

<DatasetItem>:
    view: view
    size_hint_x: 1
    size_hint_y: None
    BoxLayout:
        id: view
        size_hint_x: 1
        size_hint_y: None
        height: self.minimum_height
        orientation: "vertical"

<InfoPanel@ScrollView>:
    do_scroll_x: False
    do_scroll_y: True
    canvas.before:
        Color:
            hsv: (0, 0, 0.26)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 1


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)
<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y:  None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)